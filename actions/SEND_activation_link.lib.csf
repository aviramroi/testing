<sfdl version="1.0" xmlns="urn:sfdl">
  <actions>
    <action name="SEND_activation_link" adapter="email" idempotentKey="${email}">
      <input>
        <field name="email" type="email"/>
        <field name="link" type="text"/>
      </input>
      <output type="ok_response"/>
    </action>
  </actions>
</sfdl>