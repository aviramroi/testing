<sfdl version="1.0" xmlns="urn:sfdl">
  <actions>
    <action name="VERIFY_full_name" adapter="accounts" idempotentKey="${account_id}|${full_name}">
      <input>
        <field name="account_id" type="account_id"/>
        <field name="full_name" type="text"/>
      </input>
      <output type="boolean"/>
      <audit event="account.name_verified">
        <fieldRef>account_id</fieldRef>
        <fieldRef>full_name</fieldRef>
      </audit>
    </action>
  </actions>
</sfdl>