<sfdl version="1.0" xmlns="urn:sfdl">
  <actions>
    <action name="INITIATE_password_reset" adapter="auth" idempotentKey="${email}">
      <input>
        <field name="email" type="email"/>
      </input>
      <output type="ok_response"/>
      <audit event="password.reset_initiated">
        <fieldRef>email</fieldRef>
      </audit>
    </action>
  </actions>
</sfdl>