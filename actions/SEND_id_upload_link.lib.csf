<sfdl version="1.0" xmlns="urn:sfdl">
  <actions>
    <action name="SEND_id_upload_link" adapter="email" idempotentKey="${account_id}|id_upload">
      <input>
        <field name="account_id" type="account_id"/>
        <field name="email" type="email"/>
      </input>
      <output type="boolean"/>
      <audit event="account.id_upload_link_sent">
        <fieldRef>account_id</fieldRef>
        <fieldRef>email</fieldRef>
      </audit>
    </action>
  </actions>
</sfdl>